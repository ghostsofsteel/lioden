{
    "manifest_version": 3,
    "name": "Lio-MODDED!",
    "version": "1.5",
    "description": "Enhances your Lion Experience.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "notifications"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
       "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
  }
  